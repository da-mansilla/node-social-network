<div class="card">
	<div class="card-header bg-dark">
		<h3 class="card-title text-white">
			<i class="far fa-image"></i> Upload an Image
		</h3>
	</div>
	<div class="card-body">
		<form action="/images" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<div class="custom-file">
					<div class="input-group mb-3">
					  <div class="input-group-prepend">
					    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
					  </div>
					  <div class="custom-file">
					    <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01" name="image">
					    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
					  </div>
					</div>
				</div>
			</div>
			<div class="form-group">
				<input type="text" name="title" class="form-control" placeholder="Title for the Image" required> 
			</div>
			<div class="form-group">
				<textarea name="description" rows="2" class="form-control" placeholder="Description for The Image" required=""></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-success"> <i class="fa fa-upload"> </i> Upload Your Image</button>
			</div>
		</form>
	</div>
</div>

<div class="card mt-2">
	<div class="card-header bg-dark text-white">
		<h3> <i class="far fa-images"> </i> Recent Upload</h3>
	</div>
	<div class="card-body">
		<div class="row">
			{{#each images}}
			<div class="col-md-4">
				<a href="/images/{{uniqueId}}">
					<img src="public/upload/{{filename}}" class="w-100 h-100 img-thumbnail">
				</a>
			</div>
			{{/each}}
		</div>
	</div>
</div>