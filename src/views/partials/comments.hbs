{{#if sidebar.comments}}
	<div class="card mt-2">
		<div class="card-header bg-dark text-white">
			<h5> <i class="fas fa-comments"></i> Latest Comments</h5>
		</div>
		<div class="card-body">
			{{#each sidebar.comments}}
				<div class="row border">
					<div class="col">
						<a href="/images/{{image.uniqueId}}">
							<img src="/public/upload/{{image.filename}}" class="img-thumbnail w-50">
						</a>
					</div>
					<div class="col">
						<blockquote class="w-70">
							<span class="lead">{{comment}}</span>
							<footer class="blockquote-footer">
								<span class="">{{name}}</span> <br/>
								<span>{{timeago timestamp}}</span>
							</footer>
						</blockquote>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
{{/if}}